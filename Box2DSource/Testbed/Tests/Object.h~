#ifndef OBJECT_H
#define OBJECT_H

#include "Material.h"
#include "Shape.h"

class Object
{
    public:
    const std::string type;
    const Material* material;
    const Shape* shape;
    const double score;
    const std::string editorGroup;
    
    Object() { }
    Object( std::string type, Material* material, Shape* shape, double score, const std::string editorGroup );
};

class Bird : public Object
{
    public:
    const double damagedFrameCount;
    const double maxHealth;
    
    Bird() { }
    Bird( std::string type, Material* material, Shape* shape, double score, const std::string editorGroup, double damagedFrameCount, double maxHealth );
};

class Block : public Object
{
    public:
    const double maxHealth;
    
    Block() { }
    Block( std::string type, Material* material, Shape* shape, double score, const std::string editorGroup, double maxHealth );
};

class Terrain : public Object
{
    public:
    const double damagedFrameCount;
    
    Terrain() { }
    Terrain(std::string type, Material* material, Shape* shape, double score, const std::string editorGroup, double damagedFrameCount);
};

class Pig : public Object
{
    public:
    const double maxHealth;
    
    Pig() { }
    Pig(std::string type, Material* material, Shape* shape, double score, const std::string editorGroup, double maxHealth);
};

#endif

